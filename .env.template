# Environment Variables for Stock Analyzer Backend
# Copy this file to .env and fill in your actual API keys

# NewsAPI Key - Get from https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here

# Alpha Vantage Key - Get from https://www.alphavantage.co/
ALPHA_VANTAGE_KEY=your_alphavantage_key_here

# Optional: Claude API Key for sentiment analysis
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cache Configuration (if using Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # Cache time-to-live in seconds
